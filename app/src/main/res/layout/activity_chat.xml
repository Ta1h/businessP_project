<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#3e3737">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_icon"
                    android:layout_marginTop="13dp"
                    android:onClick="backChat" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/account_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="test_name"
                        android:textSize="20sp"
                        android:textColor="#A18E8E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:text="online"
                        android:textSize="20sp"
                        android:textColor="#A18E8E"/>
                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="2.1in"
                android:layout_height="wrap_content"
                tools:ignore="InOrMmUsage">

                <LinearLayout
                    android:layout_width="2.1in"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@drawable/right_chat"
                        android:gravity="center"
                        android:text="hi"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:background="@drawable/right_chat"
                        android:gravity="center"
                        android:text="how are you?"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:background="@drawable/left_chat"
                        android:gravity="center"
                        android:text="how are you?"
                        android:textSize="20sp"
                        android:layout_marginStart="160dp"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </ScrollView>

            <EditText
                android:layout_width="2.1in"
                android:layout_height="60dp"
                android:background="@drawable/message_box"
                android:drawableEnd="@drawable/send_icon"
                android:paddingEnd="15dp"
                android:layout_marginTop="100dp"
                android:paddingStart="20dp"
                android:hint="Type something.."
                tools:ignore="HardcodedText,InOrMmUsage,RtlSymmetry">
            </EditText>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>